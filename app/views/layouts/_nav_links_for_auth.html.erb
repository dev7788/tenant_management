<% if user_signed_in? %>
  <li><%= link_to 'Edit account', edit_user_registration_path %></li>
  <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
<% else %>
    <% if request.subdomain != '' && !Customer.current.nil? %>
      <% if Customer.current.authentication_type == 0 %>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
      <% else %>
          <li><%= link_to "Sign in with SAML", "#{user_saml_omniauth_authorize_path()}?subdomain=#{request.subdomain}" %></li>
      <% end %>
    <% else %>
      <li><%= link_to 'Sign in', new_user_session_path %></li>
    <% end %>
<% end %>
<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>
    <li><%= link_to 'Users', users_path %></li>
        <% if request.subdomain == '' %>
            <li><%= link_to 'Tenants', customers_path %></li>
        <% end %>
  <% end %>
<% end %>
